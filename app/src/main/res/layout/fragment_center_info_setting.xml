<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:divider="@drawable/divider_linear_layout"
    android:showDividers="beginning|middle|end">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMainWhite"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <com.stevengo.myapplication.views.RoundImageView
                android:id="@+id/id_imageview_icon_receive"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/icon_test_receive" />
            <com.stevengo.myapplication.views.RoundImageView
                android:id="@+id/id_imageview_icon_send"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_test_send" />
        </LinearLayout>

        <TextView
            android:text="@string/click_to_change_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@color/colorMainWhite"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/id_raletive_layout_setting_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_setting_item"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_friend_name"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/id_imageview_go"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/go_gray"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/id_textview_setting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StevenGooooooo"
            android:layout_toStartOf="@id/id_imageview_go"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@color/colordivider"
            android:layout_marginEnd="10dp"/>
        </RelativeLayout>
    </LinearLayout>