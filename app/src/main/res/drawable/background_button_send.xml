<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners
                android:radius="4dp"/>
            <padding
                android:left="2dp"
                android:top="4dp"
                android:right="2dp"
                android:bottom="4dp"/>
            <solid
                android:color="@color/colorMainBlue"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners
                android:radius="4dp"/>
            <padding
                android:left="2dp"
                android:top="4dp"
                android:right="2dp"
                android:bottom="4dp"/>
            <solid
                android:color="@color/colorButtonPressed"/>
        </shape>
    </item>
</selector>