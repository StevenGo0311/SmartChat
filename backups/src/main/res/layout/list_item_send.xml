<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="right">
    <TextView
        android:id="@+id/id_textView_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp">


        <TextView
            android:id="@+id/id_textview_message_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_send"
            android:textSize="18sp"
            android:textColor="@color/colorTextSend"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:maxWidth="310dp"
            android:autoLink="all"/>
        <ImageView
            android:id="@+id/id_imageview_icon_send"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/icon_send2"
            android:layout_marginRight="5dp"
            android:layout_gravity="top"/>

    </LinearLayout>
</LinearLayout>